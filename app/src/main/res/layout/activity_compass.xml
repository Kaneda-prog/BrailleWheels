<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_compass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.CompassActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="380dp"
        android:layout_height="220dp"
        android:importantForAccessibility="no"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp"
        tools:context=".MapsActivity" />

    <TextView
        android:id="@+id/txt_azimuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="0Â°"
        android:importantForAccessibility="no"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="288dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/veclopis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:importantForAccessibility="no"
            android:text="veclopis"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:importantForAccessibility="no"
            android:text="duration"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:importantForAccessibility="no"
            android:text="distance"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/atBus"
        android:importantForAccessibility="yes"
        android:layout_width="395dp"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="513dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#EC0B43"
        android:fontFamily="monospace"
        android:text="@string/birimbau"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/i"
        android:layout_width="224dp"
        android:layout_height="290dp"
        android:layout_below="@+id/txt_azimuth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/thing"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/img_compass"
        android:layout_width="224dp"
        android:layout_height="290dp"
        android:layout_below="@+id/txt_azimuth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/other_thing"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/busStop"
        android:layout_width="111dp"
        android:layout_height="81dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="0dp"
        map:srcCompat="@drawable/go_bus" />

    <ImageView
        android:id="@+id/busGo"
        android:layout_width="111dp"
        android:layout_height="81dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="0dp"
        map:srcCompat="@drawable/bus_wait" />

    <ImageView
        android:id="@+id/busAt"
        android:layout_width="111dp"
        android:layout_height="81dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="0dp"
        map:srcCompat="@drawable/aboard" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:importantForAccessibility="no"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:text="Debug exit"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="TextView"
        android:importantForAccessibility="no"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

</RelativeLayout>